                            android:cropToPadding="true"
                            android:src="@drawable/ic_kategori"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="Misteri"
                        android:textSize="15dp"
